<script>
const sidebarLinks = document.querySelectorAll('.sidebar-link');
const statCards = document.querySelectorAll('.stat-card');
const sections = document.querySelectorAll('main > section');
const uploadFileInput = document.getElementById('uploadFileInput');

function showSection(sectionId) {
    sections.forEach(sec => sec.classList.add('hidden'));
    const el = document.getElementById(sectionId + '-section');
    if(el) el.classList.remove('hidden');
}

// Sidebar navigation
sidebarLinks.forEach(link => {
    link.addEventListener('click', (e) => {
        e.preventDefault();
        sidebarLinks.forEach(l => l.classList.remove('text-blue-600', 'font-bold'));
        link.classList.add('text-blue-600', 'font-bold');
        showSection(link.dataset.section);
    });
});

// Stat card navigation
statCards.forEach(card => {
    card.addEventListener('click', () => {
        showSection(card.dataset.section);
        sidebarLinks.forEach(l => l.classList.remove('text-blue-600', 'font-bold'));
        const targetLink = Array.from(sidebarLinks).find(l => l.dataset.section === card.dataset.section);
        if (targetLink) targetLink.classList.add('text-blue-600', 'font-bold');
    });
});

// Trigger file upload
function triggerUpload() {
    uploadFileInput.click();
}

uploadFileInput.addEventListener('change', () => {
    const file = uploadFileInput.files[0];
    if(!file) return;
    alert(`File "${file.name}" selected for upload.`);
    uploadFileInput.value = '';
});
</script>

